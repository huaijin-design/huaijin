{
  "name": "huaijin",
  "version": "0.0.1",
  "description": "a react-based framework",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/huaijin-design/huaijin.git"
  },
  "keywords": [
    "react",
    "javascript"
  ],
  "main": "lib/index.js",
  "module": "es/index.js",
  "jsnext:main": "es/index.js",
  "scripts": {
    "watch:umd": "tsc -w",
    "watch:es": "tsc -w --module es6 --outDir ./es",
    "watch:dist": "tsc -w --module amd --outFile ./dist/huaijin.js",
    "build:umd": "rm -rf lib/ && tsc -d",
    "build:es": "rm -rf es/ && tsc -d --module es6 --outDir ./es",
    "build:dist": "rm -rf dist/ && tsc -d --module amd --outFile ./dist/huaijin.js",
    "build": "npm run build:umd && npm run build:es && npm run build:dist",
    "test": "jest --config jest.config.js",
    "test:watch": "jest --watchAll --config jest.config.js",
    "codecov": "codecov"
  },
  "author": "chenyueban <chenyueban@foxmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/huaijin-design/huaijin/issues"
  },
  "homepage": "https://github.com/huaijin-design/huaijin#readme",
  "devDependencies": {
    "@types/jest": "^24.0.5",
    "@types/react": "^16.8.3",
    "@types/react-dom": "^16.8.1",
    "@types/react-test-renderer": "^16.8.1",
    "@types/styled-components": "^4.1.10",
    "codecov": "^3.2.0",
    "cz-conventional-changelog": "^2.1.0",
    "jest": "^24.1.0",
    "jest-styled-components": "^6.3.1",
    "react-test-renderer": "^16.8.2",
    "ts-jest": "^23.10.5",
    "tslint": "^5.12.1",
    "tslint-eslint-rules": "^5.4.0",
    "tslint-react": "^3.6.0",
    "typescript": "^3.3.3"
  },
  "peerDependencies": {
    "react": ">= 16.6.1",
    "react-dom": ">= 16.6.1"
  },
  "dependencies": {
    "polished": "^2.3.3",
    "prop-types": "^15.7.2",
    "react": "^16.8.1",
    "react-dom": "^16.8.1",
    "styled-components": "^4.1.3",
    "styled-theming": "^2.2.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
